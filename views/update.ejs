<%- include('partials/navbar') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/style.css">

<main class="container my-5">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="text-primary mb-4">Select Contact To Update</h1>
          
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover align-middle">
              <thead class="table-dark">
                <tr>
                  <th class="text-center">Name</th>
                  <th class="text-center">Address</th>
                  <th class="text-center">Phone Number</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              
              <tbody>
                <% for(let count=0; count<contacts.length; count++) { %>
                  <tr>
                    <td class="text-center"><%= contacts[count].name %></td>
                    <td class="text-center"><%= contacts[count].address %></td>
                    <td class="text-center"><%= contacts[count].phone_number %></td>
                    <td class="text-center">
                      <a href="/update/<%= contacts[count]._id %>" class="btn btn-warning btn-sm">
                        Edit
                      </a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          
          <div class="mt-3">
            <a href="/" class="btn btn-secondary">Back to Home</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>